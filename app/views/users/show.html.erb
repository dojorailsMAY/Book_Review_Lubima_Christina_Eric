<div id="add_book_logout">
        <a class="add_link" href="/books">Home</a>
        <a class="add_link" href="/books/new">Add Book and Review</a>
        <a style="margin-left:25px" href="/users/logout">Logout</a>
    </div>
    <div id="main">
        <h2>User Alias:<%=@user.username%></h2>
        <h3>Name:<%=@user.first_name%>  <%=@user.last_name%></h3>
        <h3>Email:<%=@user.email%></h3>
        <h3>Total Reviews:<%=@count%></h3><br>
        <!-- Could have done @reviews.length -->
        <h4>Posted reviews on the following books:</h4>
            <% @reviews.each do |review| %>
                <a href="/books/<%=review.book.id %>"><%= review.book.title %></a><br>
            <% end %>
    </div>
 </div>
