<body>
    <h1>Welcome!</h1>
    <h1>Login</h1>
    <form action ='/users/login' method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        Email: <br>
        <input type="text" name="user[email]"><br>
        Password:<br>
        <input type="password" name="user[password]"><br><br>
        <input type="submit" value= "Login"><br><br>
    </form>

    <h1>Register</h1>
    <form action ='/users' method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        First name: <br>
        <input type="text" name="user[first_name]"><br>
        Last name: <br>
        <input type="text" name="user[last_name]"><br>
        Username: <br>
        <input type="text" name="user[username]"><br>
        Email: <br>
        <input type="text" name="user[email]"><br>
        Password:<br>
        <input type="password" name="user[password]"><br>
        Confirm Password:<br>
        <input type="password" name="user[password_confirmation]"><br><br>
        <input type="submit" value= "Register"><br><br>
    </form>
</body>

